---
import BaseLayout from "../BaseLayout.astro"
---
<BaseLayout pageTitle="prtm">
  <div class="h-full w-full flex flex-col justify-start items-center p-4 sm:p-8">
    <div class="text-textWhite w-full font-gothic mt-4 sm:mt-8 text-lg">
      <div class="flex flex-col gap-8 justify-center items-start" id="mother-container">
        <p class="text-base sm:text-lg">
          A random internet dweller with a passion for development, DevOps, and scripting, who lives on Coffee, Code, and Chaos ʕノ•ᴥ•ʔノ ︵ ┻━┻
        </p>
        <div id="cookie-holder" class="flex flex-wrap gap-2 mt-4">
          <p id="cookie" class="hover:text-textYellow hover:cursor-pointer">
            P.S. here, have a cookie ► 🍪
          </p>
        </div>
      </div>
    </div>
    <hr class="w-[75%] border-2 border-dashed border-textWhite my-16 sm:my-28">
  </div>
</BaseLayout>

<script>
  let cookieCount = 0;
  const maxCookies = 7;
  const cookie = document.getElementById("cookie");
  const container = document.getElementById("cookie-holder");
  const superContainer = document.getElementById("mother-container");

  cookie?.addEventListener("click", () => {
    if (cookieCount < maxCookies) {
      const p = document.createElement("p");
      p.innerHTML = "🍪";
      p.classList.add("text-xl");
      container?.appendChild(p);
      cookieCount++;
    } else if (cookieCount === maxCookies) {
      const p = document.createElement("p");
      p.innerHTML = "Alright, that's enough cookies for you :P";
      p.classList.add("text-base", "mt-4");
      superContainer?.appendChild(p);
      cookieCount++;
    }
  });
</script>